<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:background="#09C1FF">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:textColor="#fff"
            android:text="Settings"/>
        <TextView
            android:layout_width="wrap_content"
            android:textColor="#fff"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textSize="24sp"
            android:text="Profile"/>

        <TextView
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Logout"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textColor="#fff" />
    </RelativeLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_img"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/avatar"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        app:civ_border_width="3dp"
        app:civ_border_color="#bbb"/>
    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Victoria Robertson"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/profile_img"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textSize="30sp"
        android:textColor="#000"/>
    <TextView
        android:id="@+id/txt_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txt_name"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:text="A mantra goes here"
        android:textColor="#000"/>
    <RelativeLayout
        android:id="@+id/title"
        android:layout_below="@+id/txt_detail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/btn_gray">
        <TextView
            android:id="@+id/post"
            android:layout_width="149dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_white"
            android:text="Posts"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#09C1FF"
            android:gravity="center"/>
        <TextView
            android:id="@+id/photo"
            android:layout_toRightOf="@id/post"
            android:layout_width="149dp"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:text="Photos"
            android:textSize="16sp"
            android:gravity="center"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/item1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/title">

        <ImageView
            android:id="@+id/img_item1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/item" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_item1">
            <TextView
                android:id="@+id/txt_header1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Header"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/txt_time1"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8m ago"/>
            <TextView
                android:id="@+id/detal1"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_header1"
                android:textColor="#000"
                android:text="A robot is a machinecapable of carrying out a complex series of actions automatically." />
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/item2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/item1">
        <ImageView
            android:id="@+id/img_item2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/item" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_item2">

            <TextView
                android:id="@+id/txt_header2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Header"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/txt_time2"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8m ago"/>

            <TextView
                android:id="@+id/detail2"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_header2"
                android:textColor="#000"
                android:text="A robot is a machinecapable of carrying out a complex series of actions automatically." />

        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/item3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/item2">

        <ImageView
            android:id="@+id/img_item3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/item" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@id/img_item3">

            <TextView
                android:id="@+id/txt_header3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Header"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/txt_time3"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8m ago"/>

            <TextView
                android:id="@+id/detal3"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_header3"
                android:textColor="#000"

                android:text="A robot is a machinecapable of carrying out a complex series of actions automatically." />

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>